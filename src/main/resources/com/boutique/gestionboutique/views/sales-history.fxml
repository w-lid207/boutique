<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.boutique.gestionboutique.controller.SalesHistoryController"
      spacing="20"
      style="-fx-background-color: #f8fafc;"
      stylesheets="@../stylesheets/sales.css">

    <padding>
        <Insets top="25" right="30" bottom="25" left="30"/>
    </padding>

    <!-- HEADER -->
    <VBox spacing="15">
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label text="ðŸ“Š"
                   style="-fx-font-size: 36px; -fx-text-fill: #4361ee;"/>
            <VBox spacing="5">
                <Label text="Historique des Ventes"
                       style="-fx-font-family: 'Poppins Bold'; -fx-font-size: 28px; -fx-text-fill: #1e293b;"/>
                <Label text="Consultez toutes vos transactions"
                       style="-fx-font-family: 'Poppins Light'; -fx-font-size: 14px; -fx-text-fill: #64748b;"/>
            </VBox>
        </HBox>

        <!-- STATISTIQUES -->
        <HBox spacing="20">
            <!-- Carte Total Ventes -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;
                  -fx-effect: dropshadow(gaussian, rgba(67,97,238,0.1), 10, 0, 0, 3);"
                  spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="ðŸ’°" style="-fx-font-size: 24px;"/>
                    <Label text="Total des Ventes"
                           style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                </HBox>
                <Label fx:id="totalSalesLabel" text="0 MAD"
                       style="-fx-font-family: 'Poppins Bold'; -fx-font-size: 24px; -fx-text-fill: #4361ee;"/>
                <Label fx:id="totalSalesCount" text="0 ventes"
                       style="-fx-font-family: 'Poppins Regular'; -fx-font-size: 12px; -fx-text-fill: #94a3b8;"/>
            </VBox>

            <!-- Carte Ventes Aujourd'hui -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;
                  -fx-effect: dropshadow(gaussian, rgba(52,211,153,0.1), 10, 0, 0, 3);"
                  spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="ðŸ“ˆ" style="-fx-font-size: 24px;"/>
                    <Label text="Ventes Aujourd'hui"
                           style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                </HBox>
                <Label fx:id="todaySalesLabel" text="0"
                       style="-fx-font-family: 'Poppins Bold'; -fx-font-size: 24px; -fx-text-fill: #10b981;"/>
                <Label fx:id="todaySalesAmount" text="0 MAD"
                       style="-fx-font-family: 'Poppins Regular'; -fx-font-size: 12px; -fx-text-fill: #94a3b8;"/>
            </VBox>

            <!-- Carte Ventes Moyenne -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;
                  -fx-effect: dropshadow(gaussian, rgba(245,158,11,0.1), 10, 0, 0, 3);"
                  spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="ðŸ“Š" style="-fx-font-size: 24px;"/>
                    <Label text="Moyenne par vente"
                           style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 14px; -fx-text-fill: #64748b;"/>
                </HBox>
                <Label fx:id="averageSaleLabel" text="0 MAD"
                       style="-fx-font-family: 'Poppins Bold'; -fx-font-size: 24px; -fx-text-fill: #f59e0b;"/>
                <Label text="par transaction"
                       style="-fx-font-family: 'Poppins Regular'; -fx-font-size: 12px; -fx-text-fill: #94a3b8;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- BARRE DE RECHERCHE -->
    <HBox spacing="15" alignment="CENTER">
        <TextField fx:id="searchField"
                   promptText="ðŸ” Rechercher par ID, montant ou date..."
                   style="-fx-background-color: white; -fx-background-radius: 25; -fx-border-radius: 25;
                          -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-padding: 12 25;
                          -fx-font-family: 'Poppins Regular'; -fx-font-size: 14px; -fx-pref-width: 500px;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);"
                   HBox.hgrow="ALWAYS"/>

        <Button fx:id="refreshButton"
                text="ðŸ”„ Actualiser"
                onAction="#handleRefresh"
                style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-font-family: 'Poppins SemiBold';
                       -fx-font-size: 14px; -fx-background-radius: 25; -fx-padding: 12 30; -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(99,102,241,0.3), 8, 0, 0, 3);"/>
    </HBox>

    <!-- TABLE DES VENTES -->
    <VBox spacing="15" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT">
            <Label text="ðŸ“‹ Liste des Ventes"
                   style="-fx-font-family: 'Poppins SemiBold'; -fx-font-size: 18px; -fx-text-fill: #1e293b;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="countLabel" text="0 ventes"
                   style="-fx-font-family: 'Poppins Regular'; -fx-font-size: 14px; -fx-text-fill: #64748b;"/>
        </HBox>

        <TableView fx:id="salesTable"
                   style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12;
                          -fx-border-color: #e2e8f0; -fx-border-width: 1;
                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">

            <columns>
                <TableColumn fx:id="idColumn" text="ID" minWidth="80"/>
                <TableColumn fx:id="dateColumn" text="Date Heure" minWidth="200"/>
                <TableColumn fx:id="totalColumn" text="Montant" minWidth="120"/>
                <TableColumn fx:id="actionColumn" text="Actions" minWidth="150"/>
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

        </TableView>
    </VBox>

</VBox>