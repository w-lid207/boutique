<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="799.0" prefWidth="1285.0" stylesheets="@../stylesheets/sales.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boutique.gestionboutique.controller.SalesHistoryController">
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" styleClass="center-container" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="tab-title" text="Sales History" />
                <Label styleClass="tab-subtitle" text="All sales records" />

                <!-- Barre de recherche avec FlowPane responsive -->
                <FlowPane hgap="10" styleClass="search-bar" vgap="10">
                    <children>
                        <TextField fx:id="searchField" promptText="Search by ID..." styleClass="search-field" />
                        <Button onAction="#handleRefresh" styleClass="refresh-btn" text="Refresh" />
                    </children>
                </FlowPane>

                <!-- TableView -->
                <TableView fx:id="salesTable" styleClass="sales-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" styleClass="id-column" text="ID" />
                        <TableColumn fx:id="dateColumn" styleClass="date-column" text="Date" />
                        <TableColumn fx:id="totalColumn" styleClass="total-column" text="Total" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
