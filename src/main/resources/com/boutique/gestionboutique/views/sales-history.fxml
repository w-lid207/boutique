<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-background-color: #f8fafc;" stylesheets="@../stylesheets/sales.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boutique.gestionboutique.controller.SalesHistoryController">

    <padding>
        <Insets bottom="25" left="30" right="30" top="25" />
    </padding>

    <!-- HEADER -->
    <VBox spacing="15">
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Label style="-fx-font-size: 36px; -fx-text-fill: #4361ee;" text="ðŸ“Š" />
            <VBox spacing="5">
                <Label style="-fx-font-family: 'Poppins Bold'; -fx-font-size: 28px; -fx-text-fill: #1e293b;" text="Historique des Ventes" />
                <Label style="-fx-font-family: 'Poppins Light'; -fx-font-size: 14px; -fx-text-fill: #64748b;" text="Consultez toutes vos transactions" />
            </VBox>
        </HBox>

        <!-- STATISTIQUES -->
        <HBox spacing="20">
            <!-- Carte Total Ventes -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;                   -fx-effect: dropshadow(gaussian, rgba(67,97,238,0.1), 10, 0, 0, 3);">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 24px;" text="ðŸ’°" />
                    <Label style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 14px; -fx-text-fill: #64748b;" text="Total des Ventes" />
                </HBox>
                <Label fx:id="totalSalesLabel" style="-fx-font-family: 'Poppins Bold'; -fx-font-size: 24px; -fx-text-fill: #4361ee;" text="0 MAD" />
                <Label fx:id="totalSalesCount" style="-fx-font-family: 'Poppins Regular'; -fx-font-size: 12px; -fx-text-fill: #94a3b8;" text="0 ventes" />
            </VBox>

            <!-- Carte Ventes Aujourd'hui -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;                   -fx-effect: dropshadow(gaussian, rgba(52,211,153,0.1), 10, 0, 0, 3);">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 24px;" text="ðŸ“ˆ" />
                    <Label style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 14px; -fx-text-fill: #64748b;" text="Ventes Aujourd'hui" />
                </HBox>
                <Label fx:id="todaySalesLabel" style="-fx-font-family: 'Poppins Bold'; -fx-font-size: 24px; -fx-text-fill: #10b981;" text="0" />
                <Label fx:id="todaySalesAmount" style="-fx-font-family: 'Poppins Regular'; -fx-font-size: 12px; -fx-text-fill: #94a3b8;" text="0 MAD" />
            </VBox>

            <!-- Carte Ventes Moyenne -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;                   -fx-effect: dropshadow(gaussian, rgba(245,158,11,0.1), 10, 0, 0, 3);">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label style="-fx-font-size: 24px;" text="ðŸ“Š" />
                    <Label style="-fx-font-family: 'Poppins Medium'; -fx-font-size: 14px; -fx-text-fill: #64748b;" text="Moyenne par vente" />
                </HBox>
                <Label fx:id="averageSaleLabel" style="-fx-font-family: 'Poppins Bold'; -fx-font-size: 24px; -fx-text-fill: #f59e0b;" text="0 MAD" />
                <Label style="-fx-font-family: 'Poppins Regular'; -fx-font-size: 12px; -fx-text-fill: #94a3b8;" text="par transaction" />
            </VBox>
        </HBox>
    </VBox>

    <!-- BARRE DE RECHERCHE -->
    <HBox alignment="CENTER" spacing="15">
        <TextField fx:id="searchField" promptText="ðŸ” Rechercher par ID, montant ou date..." style="-fx-background-color: white; -fx-background-radius: 25; -fx-border-radius: 25;                           -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-padding: 12 25;                           -fx-font-family: 'Poppins Regular'; -fx-font-size: 14px; -fx-pref-width: 500px;                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);" HBox.hgrow="ALWAYS" />

        <Button fx:id="refreshButton" onAction="#handleRefresh" style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-font-family: 'Poppins SemiBold';                        -fx-font-size: 14px; -fx-background-radius: 25; -fx-padding: 12 30; -fx-cursor: hand;                        -fx-effect: dropshadow(gaussian, rgba(99,102,241,0.3), 8, 0, 0, 3);" text="ðŸ”„ Actualiser" />
    </HBox>

    <!-- TABLE DES VENTES -->
    <VBox spacing="15" VBox.vgrow="ALWAYS">
        <HBox alignment="CENTER_LEFT">
            <Label style="-fx-font-family: 'Poppins SemiBold'; -fx-font-size: 18px; -fx-text-fill: #1e293b;" text="ðŸ“‹ Liste des Ventes" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="countLabel" style="-fx-font-family: 'Poppins Regular'; -fx-font-size: 14px; -fx-text-fill: #64748b;" text="0 ventes" />
        </HBox>

        <TableView fx:id="salesTable" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12;                           -fx-border-color: #e2e8f0; -fx-border-width: 1;                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 15, 0, 0, 3);">

            <columns>
                <TableColumn fx:id="idColumn" minWidth="80" text="ID" />
                <TableColumn fx:id="dateColumn" minWidth="200" text="Date  &amp;Heure" />
                <TableColumn fx:id="totalColumn" minWidth="120" text="Montant" />
                <TableColumn fx:id="actionColumn" minWidth="150" text="Actions" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>

        </TableView>
    </VBox>

</VBox>
