<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.boutique.gestionboutique.controller.LoginController"
            stylesheets="@../stylesheets/styles.css"
            prefWidth="1000" prefHeight="700">

    <center>
        <StackPane styleClass="main-container">

            <!-- Card Container -->
            <VBox styleClass="login-card" spacing="40" alignment="CENTER">

                <!-- Header Section -->
                <HBox spacing="150" alignment="CENTER">
                    <!-- Left: Login Title -->
                    <VBox spacing="20" alignment="CENTER_LEFT">
                        <Text text="Login" styleClass="login-title"/>

                        <!-- Form Fields -->
                        <VBox spacing="15" styleClass="form-section">
                            <!-- Email Field -->
                            <TextField fx:id="emailField"
                                       prefWidth="280"
                                       prefHeight="45"
                                       promptText="your@email.com"
                                       styleClass="input-field"/>

                            <!-- Password Field -->
                            <PasswordField fx:id="passwordField"
                                           prefWidth="280"
                                           prefHeight="45"
                                           promptText="••••••••"
                                           styleClass="input-field"/>

                            <!-- Login Button -->
                            <Button text="Login"
                                    fx:id="loginButton"
                                    prefWidth="280"
                                    prefHeight="45"
                                    styleClass="login-button"
                                    onAction="#handleLogin"/>
                        </VBox>




                        <Label fx:id="errorLabel"
                               styleClass="error-message"
                               visible="false"/>
                    </VBox>

                    <!-- Right: Welcome Text (Decorative) -->
                    <VBox spacing="10" alignment="CENTER" styleClass="welcome-section">
                        <Text text="Welcome" styleClass="welcome-title"/>
                        <Text text="Back" styleClass="welcome-title"/>
                    </VBox>
                </HBox>
            </VBox>
        </StackPane>
    </center>
</BorderPane>