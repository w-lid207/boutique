<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<ScrollPane fitToWidth="true" styleClass="root-pane" stylesheets="@../stylesheets/dashboard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boutique.gestionboutique.controller.DashBoardController">
   <content>
      <VBox spacing="30.0">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label styleClass="page-title" text="Dashboard" />
                  <Region HBox.hgrow="ALWAYS" />
                  <HBox alignment="CENTER" spacing="10.0" styleClass="profile-container">
                     <children>
                        <Label styleClass="profile-name" text="Admin" />
                        <StackPane>
                           <children>
                              <Circle fill="#e0e0e0" radius="18.0" />
                              <Label text="A" textFill="#666" />
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </children>
            </HBox>

            <HBox spacing="20.0">
               <children>
                  <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <Label styleClass="kpi-icon" text="\$" />
                        </HBox>
                        <Label fx:id="revenueForToday" styleClass="kpi-value" text="0DH" />
                        <Label styleClass="kpi-label" text="Revenue Today" />
                     </children>
                  </VBox>

                  <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <Label styleClass="kpi-icon" text="ðŸ›" />
                        </HBox>
                        <Label fx:id="todaySaleCount" styleClass="kpi-value" text="0" />
                        <Label styleClass="kpi-label" text="Sales Today" />
                     </children>
                  </VBox>

                  <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <Label styleClass="kpi-icon" text="ðŸ‘¥" />
                        </HBox>
                        <Label fx:id="TotalProducts" styleClass="kpi-value" text="0" />
                        <Label styleClass="kpi-label" text="Total Products" />
                     </children>
                  </VBox>

                  <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT">
                           <Label styleClass="kpi-icon" text="ðŸ“¦" />
                        </HBox>
                        <Label fx:id="lowStockItems" styleClass="kpi-value" text="0" />
                        <Label styleClass="kpi-label" text="Low Stock Items" />
                     </children>
                  </VBox>
               </children>
            </HBox>

            <VBox styleClass="content-card">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <VBox>
                           <Label styleClass="section-title" text="Monthly Revenue" />
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox styleClass="chart-toggle-box">
                           <children>
                              <Button fx:id="btnLast6Months" onAction="#handleChartToggle" styleClass="toggle-btn" text="Last 6 Months" />
                              <Button fx:id="btnYearly" onAction="#handleChartToggle" styleClass="toggle-btn, active" text="Yearly" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                  </HBox>
                  <VBox fx:id="chartContainer" prefHeight="200.0" prefWidth="100.0" />
               </children>
            </VBox>

            <VBox styleClass="content-card">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <VBox>
                           <Label styleClass="section-title" text="Recent Transactions" />
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="link-label" text="View All" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" />
                     </padding>
                  </HBox>
                  <TableView fx:id="transactionsTable" minHeight="300" prefHeight="-1">
                     <columns>
                        <TableColumn fx:id="orderIdCol" prefWidth="120" text="Order ID" />
                        <TableColumn fx:id="dateCol" prefWidth="150" text="Date &amp; Hour" />
                        <TableColumn fx:id="amountCol" prefWidth="100" text="Montant" />
                        <TableColumn fx:id="actionCol" prefWidth="80" text="Actions" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>               </children>
            </VBox>

         </children>
      </VBox>
   </content>
</ScrollPane>
