<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="800.0" prefWidth="1200.0" spacing="30.0" styleClass="root-pane" stylesheets="@../stylesheets/analytics.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.boutique.gestionboutique.controller.AnalyticsController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>

      <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="1200.0" spacing="20.0">
         <children>
            <VBox>
               <children>
                  <Label styleClass="page-title" text="Analytics" />
                  <Label styleClass="page-subtitle" text="High-level overview of your boutique performance." />
               </children>
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <Button mnemonicParsing="false" styleClass="btn-new-report" text="+ New Report" />

            <HBox alignment="CENTER" spacing="10.0" styleClass="admin-pill">
               <children>
                  <Label styleClass="admin-name" text="Admin" />
                  <StackPane styleClass="admin-initial-circle">
                     <children>
                        <Label styleClass="admin-initial" text="A" />
                     </children>
                  </StackPane>
               </children>
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </HBox>
         </children>
      </HBox>

      <HBox spacing="20.0" styleClass="kpi-container">
         <children>

            <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="f-title" text="Total sales Today" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="kpi-icon-badge" text="ðŸ›" />
                     </children>
                  </HBox>
                  <Label fx:id="todaySales" styleClass="kpi-value" text="0 DH" />

                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label styleClass="trend-badge, trend-up" text="â†— +8.2%" />
                        <Label styleClass="trend-text" text="orders today" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="f-title" text="Revenu This Month" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="kpi-icon-badge" text="\$" />
                     </children>
                  </HBox>
                  <Label fx:id="monthRevenue" styleClass="kpi-value" text="0 DH" />

                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label styleClass="trend-badge, trend-up" text="â†— +12.5%" />
                        <Label styleClass="trend-text" text="vs last month" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <VBox styleClass="kpi-card" HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label styleClass="f-title" text="Total Products" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="kpi-icon-badge" text="ðŸ“¦" />
                     </children>
                  </HBox>
                  <Label fx:id="totalProducts" styleClass="kpi-value" text="0" />

                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Label styleClass="trend-badge, trend-neutral" text="Active" />
                        <Label styleClass="trend-text" text="products in stock" />
                     </children>
                  </HBox>
               </children>
            </VBox>

         </children>
      </HBox>

      <FlowPane fx:id="chartContainer" hgap="20.0" vgap="20.0" VBox.vgrow="ALWAYS" />

   </children>
</VBox>