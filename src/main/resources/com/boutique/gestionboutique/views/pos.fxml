                <Insets bottom="30.0" left="15.0" right="30.0" top="10.0" />
            </BorderPane.margin>
            <children>
                <VBox styleClass="cart" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <VBox>
                                    <children>
                                        <Label styleClass="card-title" text="Checkout" />
                                        <Label styleClass="subtitle" text="Cart" />
